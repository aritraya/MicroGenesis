package {{ base_package }}.service;

{% for model_name, model_info in api_info.models.items() %}
{% if model_info.type == "dto" %}
import {{ base_package }}.dto.{{ model_name }};
{% endif %}
{% endfor %}
import java.util.List;
import java.util.Optional;

/**
 * Service interface for {{ tag }} operations
 */
public interface {{ service_name }} {
{% for endpoint in endpoints %}
    /**
     * {{ endpoint.summary }}
     * {% if endpoint.description %}
     * {{ endpoint.description }}
     * {% endif %}
     *
     {% for param in endpoint.parameters %}
     * @param {{ param.name }} {{ param.description|default("") }}
     {% endfor %}
     {% if endpoint.request_body %}
     * @param request the request body
     {% endif %}
     * @return the result of the operation
     */
    {% if endpoint.method == "get" and "List" in endpoint.responses[200].description %}
    List<?> {{ endpoint.operation_id }}(
        {% for param in endpoint.parameters %}
        {% if param.in == "path" or param.in == "query" %}
        {{ param.schema.type|default("String") }} {{ param.name }}{% if not loop.last %},{% endif %}
        {% endif %}
        {% endfor %}
    );
    {% elif endpoint.method == "get" %}
    Object {{ endpoint.operation_id }}(
        {% for param in endpoint.parameters %}
        {% if param.in == "path" or param.in == "query" %}
        {{ param.schema.type|default("String") }} {{ param.name }}{% if not loop.last %},{% endif %}
        {% endif %}
        {% endfor %}
    );
    {% elif endpoint.method == "post" %}
    Object {{ endpoint.operation_id }}(
        {% for content_type, content in endpoint.request_body.content.items() %}{{ content.schema.ref|split("/")|last }}{% endfor %} request
    );
    {% elif endpoint.method == "put" %}
    Object {{ endpoint.operation_id }}(
        {% for param in endpoint.parameters %}
        {% if param.in == "path" %}
        {{ param.schema.type|default("String") }} {{ param.name }},
        {% endif %}
        {% endfor %}
        {% for content_type, content in endpoint.request_body.content.items() %}{{ content.schema.ref|split("/")|last }}{% endfor %} request
    );
    {% elif endpoint.method == "delete" %}
    void {{ endpoint.operation_id }}(
        {% for param in endpoint.parameters %}
        {% if param.in == "path" %}
        {{ param.schema.type|default("String") }} {{ param.name }}{% if not loop.last %},{% endif %}
        {% endif %}
        {% endfor %}
    );
    {% endif %}
    
{% endfor %}
}
